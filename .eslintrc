{
    "env": {
        "browser": true,
        "node": true,
        "jquery": true,
        "mocha": true,
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "rules": {
        "semi": [1, "always"], // jsHint: asi: false
        "eqeqeq": [2, "allow-null"],
        "no-eval": 2,
        "indent": [2, 4],
        "no-use-before-define": [2, "nofunc"],
        "comma-style": [2, "last"],
        "no-loop-func": 2,
        "no-proto": 2,
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "no-undef": 2,
        "no-unused-vars": [2, { "vars": "all", "args": "none" }],
        "no-irregular-whitespace": 2,
        "dot-notation": [2, { "allowKeywords": true, "allowPattern": "" }], // default
        "curly": [2, "all"], // default
        "no-cond-assign": [2, "except-parens"], //default, jsHint: boss: false
        "space-before-blocks": [2, "always"],
        "strict": [1, "global"],
        "no-extra-bind": 2,
        "no-console": 2, // if you need it that bad, wrap it with /*eslint-disable*/.../*eslint-enable*/ or use following at the end: // eslint-disable-line no-console
        "no-dupe-keys": 2,
        "space-after-keywords": 2,

        // for React plugin:
        "react/jsx-boolean-value": 1,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,

        "eol-last": 1,
        // for Node environmemnt:
        "no-mixed-requires": 1,
        "handle-callback-err": 1,

        // Turned OFF, but consider enabling:
        "key-spacing": 0,
        "new-cap": 0,
        "consistent-return": 0,
        "camelcase": 0,
        "space-infix-ops": 0,
        "no-extra-boolean-cast": 0,
        "no-empty": 0,
        "no-constant-condition": 0,
        "quotes": 0,
        "one-var": 0,
        "dot-location": 0,
        "semi-spacing": 0,
        "react/display-name": 0,

        // Turned OFF:
        "no-labels": 0,
        "no-multi-spaces": 0,
        "no-underscore-dangle": 0,
        "comma-dangle": 0,
        "no-multi-str": 0,
        "no-shadow": 0

        // Not found these jsHint settings for ESLint:
        // phantom: true
        // "regexdash": true
    },
    "globals": {
        "_": true,
        "PIXI": false,
        "React": true,
        "h5": false,
        "dust": false,
        "doT": true,
        "CryptoJS": true,
        "s": true, //Adobe usage tracking

        // Development
        "console": false,

        // DAWN
        "DAWN": false,
        "MVCAdapter": false,
        "xLoadFile": false,
        "xLoadJS": true,
        "xUseCompile": true,
        "xUseLocalDevOverrides": true,
        "xLocalDev": true,
        "xRunLocalDev": false,
        "xRunTests": true,
        "Esprit": true,
        "Floor": false,
        "NAF": false,

        // QUnit globals
        "QUnit": false,
        "test": false,
        "asyncTest": false,
        "ok": false,
        "deepEqual": false,
        "equal": false,
        "notDeepEqual": false,
        "notEqual": false,
        "notStrictEqual": false,
        "strictEqual": false,
        "stop": false,
        "start": false,
        "expect": false,

        // requireJS
        "define": false,
        "require": false
    }
}
